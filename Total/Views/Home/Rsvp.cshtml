@model Total.Models.Home.Guest

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Scripts/Common.css"/>
    <title>Rsvp</title>
</head>
<body>
<div class="text-center"></div>
<h3>Rsvp</h3>
<div class="text-body"></div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <div class="form-group">
        <label>Your name:</label>        
        @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    </div>

    <div class="form-group">
        <label>Your phone:</label>
        @Html.TextBoxFor(x=>x.Phone,new{@class="form-control"})
    </div>

    <div class="form-group">
        <label>Your mail:</label>
        @Html.TextBoxFor(x=>x.Mail,new{@class="form-control"})
    </div>

    <div class="form-group">
        <label>Will you attend?</label>
        @Html.DropDownListFor(x=>x.WillAttend,new[]
        {
            new SelectListItem(){Text = "Yes, I'll attend",Value = bool.TrueString}, 
            new SelectListItem(){Text = "No, I couldn't",Value = bool.FalseString}             
        },"Choose an option",new {@class="form-control"})
    </div>
    <div class="text-center">
        <input type="submit" value="submit Rsvp" class="btn btn-success"/>
    </div>
}
</body>
</html>
