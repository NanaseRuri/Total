@model IEnumerable<string>

@{
    bool horizontal = (bool) (ViewContext.RouteData.Values["horizontalLayout"] ?? false);
    string wrapperClass = horizontal ? "btn-group btn-group-sm btn-group-justified" : null;
    string attri = horizontal ? "btn btn-default btn-sm " : "btn btn-block btn-default btn-lg ";
}

<div class="@wrapperClass">
    @*@Html.ActionLink("Home","List","Product",new{@class=attri})*@    
    @Html.RouteLink("Home",new{controller="Product",action="List",category="",page=1},new{@class=attri})
    @foreach (var link in Model)
    {
        @Html.RouteLink(link,new{controller="Product",action="List",category=link,page=1},
            new{@class=attri+(ViewBag.SelectedCategory==link?"btn-primary":"")})
    }
</div>
