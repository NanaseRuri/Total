@model System.Collections.Generic.IList<Total.Models.ModelBinding.AddressSummary>

@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_ModelBindingLayout.cshtml";
}

<h2>Address</h2>

@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <fieldset>
                <legend>Address: @(i+1)</legend>
                <div><label>City:</label>@Html.Editor("["+i+"].City")</div>
                <div><label>Country:</label>@Html.Editor("["+i+"].Country")</div>
            </fieldset>
        }
        <div><input type="submit" value="Submit"/></div>
    }
}
else
{
    foreach (var addressSummary in Model)
    {
        <div>@addressSummary.City, @addressSummary.Country</div>
    }
    <div>@Html.ActionLink("Restart","Address")</div>
}